doctype html
html
  if error
    =message
  else
    if session.logged_in != true
      head
        title Login To Proceed
      style.
        input {
          font-size: 2em;
        }
      body
        form(method='post', action='/')
          p
            input(name='username', type='text', required='true', placeholder='Username')
          p
            input#pwd(name='password', type='password', required='true', placeholder='Password')
          p
            button(type='submit') Login
    else
      head
        block title
          title=title
        block meta
        block script
        style.
          .menu {
            margin: 1em;
          }
        block style
      body
        div
          a.menu(href='/') Home
          a.menu(href='/lightest') Test Output
          a.menu(href='/list?t=log') Logs
          a.menu(href='/list?t=conf') Configs
          a.menu(href='/wireless') Wireless
          a.menu(href='/reset') Restart Thor
          a.menu(href='/restart') Reboot PI
          a.menu(href='/user') Change Passwords
          a.menu(href='/?logout') Logout
        hr
        block content
